@using System.Threading.Tasks
@using BlogExampleReact.Common.Entities
@using BlogExampleReact.Web.Models
@model BlogExampleReact.Web.Models.UserModel

<h3>Edit user</h3>

<form class="form-horizontal" asp-controller="Users" asp-action="Edit">
    @Html.HiddenFor(x => x.Id)
    
    <div class="form-group">
        <label class="control-label col-sm-2" for="title">Roles:</label>
        <div class="col-sm-10">
            <select  multiple="multiple" class="form-control" name="SelectedRoles">
                @foreach (SelectListItem role in ViewBag.AvailableRoles)
                {
                    <option selected="@(role.Selected)" value="@role.Value">@role.Text</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
</form>
