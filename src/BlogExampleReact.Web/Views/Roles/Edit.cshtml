@model BlogExampleReact.Common.Entities.ApplicationRoleEntity
<h3>Add or edit role</h3>

<form class="form-horizontal" asp-controller="Roles" asp-action="Edit">
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        <label class="control-label col-sm-2" for="title">Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="name" id="title" placeholder="Title" value="@Model.Name">
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
</form>